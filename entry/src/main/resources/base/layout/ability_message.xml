<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_ability"
    ohos:alignment="bottom"
    >
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#A2CD5A"
        >
    <Text
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:text="消息通知"
        ohos:text_size="30fp"
        ohos:text_color="#FFFFFF"
        ohos:text_alignment="center"
        />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="$graphic:background_ability_user"
        >
        <Image
            ohos:left_margin="20vp"
            ohos:top_margin="2vp"
            ohos:height="30vp"
            ohos:width="30vp"
            ohos:image_src="$media:smallspeakers"
            ohos:layout_alignment="center"
            ohos:scale_mode="stretch"
            />
        <Text
            ohos:left_padding="20vp"
            ohos:height="70vp"
            ohos:width="320vp"
            ohos:text_size="20vp"
            ohos:layout_alignment="center"
            ohos:text="预约老师信息"
            />
