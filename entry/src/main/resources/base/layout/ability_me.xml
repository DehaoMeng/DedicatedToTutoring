<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_ability"
    ohos:alignment="bottom"
    ohos:top_padding="65vp"
    >
    <DirectionalLayout
        ohos:height="0"
        ohos:weight="3"
        ohos:width="match_parent"
        ohos:background_element="#A2CD5A">
        <DirectionalLayout
            ohos:height="0"
            ohos:weight="1"
            ohos:width="match_parent"
            >
            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="个人中心"
                ohos:text_size="30fp"
                ohos:text_color="#FFFFFF"
                ohos:text_alignment="center"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:perinfor"
            ohos:height="0"
            ohos:weight="2"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            >
            <Image
                ohos:id="$+id:toux"
                ohos:margin="10vp"
                ohos:height="70vp"
                ohos:width="70vp"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:toux"
                />
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content">
                <Text
                    ohos:id="$+id:usernametext"
                    ohos:height="40vp"
                    ohos:width="230vp"
                    ohos:text="用户名"
                    ohos:text_color="#000000"
                    ohos:text_size="20fp"
                    />
                <Text
                    ohos:id="$+id:idtext"
                    ohos:height="30vp"
                    ohos:width="230vp"
                    ohos:text="ID"
                    ohos:text_color="#696969"
                    ohos:text_size="18fp"
                    />

            </DirectionalLayout>
            <Image
                ohos:height="40vp"
                ohos:width="40vp"
                ohos:image_src="$media:rightarrow"
                ohos:scale_mode="stretch"
                />
        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="0"
        ohos:weight="2"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#FFFFFF"
        >
        <DirectionalLayout
            ohos:id="$+id:myorder"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:weight="1">
            <Image
                ohos:height="50vp"
                ohos:width="50vp"
                ohos:layout_alignment="center"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:order"
                ohos:top_margin="15vp"
                />

            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="我的订单"
                ohos:text_size="15fp"
                ohos:text_color="#000000"
                ohos:text_alignment="center"
                />

        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:mypocket"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:weight="1">
            <Image
                ohos:height="50vp"
                ohos:width="50vp"
                ohos:layout_alignment="center"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:pocket"
                ohos:top_margin="15vp"
                />
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="我的钱包"
                ohos:text_size="15fp"
                ohos:text_color="#000000"
                ohos:text_alignment="center"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:myaward"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:weight="1">
            <Image
                ohos:height="50vp"
                ohos:width="50vp"
                ohos:layout_alignment="center"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:award"
                ohos:top_margin="15vp"
                />
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="奖学券"
                ohos:text_size="15fp"
                ohos:text_color="#000000"
                ohos:text_alignment="center"
                />
        </DirectionalLayout>
    </DirectionalLayout>

    <ScrollView
        ohos:height="0"
        ohos:weight="6"
        ohos:width="match_parent"
        ohos:top_margin="10vp"
        ohos:layout_alignment="bottom"
        >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent">
            <DirectionalLayout
                ohos:height="52vp"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_ability_user"
                ohos:orientation="horizontal"
                ohos:bottom_margin="2vp"
                >
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:myteacher"
                    ohos:scale_mode="stretch"
                    ohos:left_margin="10vp"
                    ohos:right_margin="5vp"
                    ohos:layout_alignment="center"
                    />
                <Text
                    ohos:height="50vp"
                    ohos:width="330vp"
                    ohos:text="我的老师"
                    ohos:text_size="20fp"
                    ohos:text_color="#000000"
                    />
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:rightarrow"
                    ohos:scale_mode="stretch"
                    ohos:layout_alignment="center"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="52vp"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_ability_user"
                ohos:orientation="horizontal"
                ohos:bottom_margin="15vp"
                >
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:myreviewer"
                    ohos:scale_mode="stretch"
                    ohos:left_margin="10vp"
                    ohos:right_margin="5vp"
                    ohos:layout_alignment="center"
                    />
                <Text
                    ohos:height="50vp"
                    ohos:width="330vp"
                    ohos:text="我的评价"
                    ohos:text_size="20fp"
                    ohos:text_color="#000000"
                    />
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:rightarrow"
                    ohos:scale_mode="stretch"
                    ohos:layout_alignment="center"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="52vp"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_ability_user"
                ohos:orientation="horizontal"
                ohos:bottom_margin="2vp"
                >
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:myanswer"
                    ohos:scale_mode="stretch"
                    ohos:right_margin="5vp"
                    ohos:left_margin="10vp"
                    ohos:layout_alignment="center"
                    />
                <Text
                    ohos:height="50vp"
                    ohos:width="330vp"
                    ohos:text="我的回答"
                    ohos:text_size="20fp"
                    ohos:text_color="#000000"
                    />
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:rightarrow"
                    ohos:scale_mode="stretch"
                    ohos:layout_alignment="center"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="52vp"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_ability_user"
                ohos:orientation="horizontal"
                ohos:bottom_margin="2vp"
                >
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:mycourse"
                    ohos:scale_mode="stretch"
                    ohos:right_margin="5vp"
                    ohos:left_margin="10vp"
                    ohos:layout_alignment="center"
                    />
                <Text
                    ohos:height="50vp"
                    ohos:width="330vp"
                    ohos:text="我的课程"
                    ohos:text_size="20fp"
                    ohos:text_color="#000000"
                    />
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:rightarrow"
                    ohos:scale_mode="stretch"
                    ohos:layout_alignment="center"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="52vp"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_ability_user"
                ohos:orientation="horizontal"
                ohos:bottom_margin="10vp"
                >
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:planning"
                    ohos:scale_mode="stretch"
                    ohos:right_margin="5vp"
                    ohos:left_margin="10vp"
                    ohos:layout_alignment="center"
                    />
                <Text
                    ohos:height="50vp"
                    ohos:width="330vp"
                    ohos:text="学习计划与总结"
                    ohos:text_size="20fp"
                    ohos:text_color="#000000"
                    />
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:rightarrow"
                    ohos:scale_mode="stretch"
                    ohos:layout_alignment="center"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="52vp"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_ability_user"
                ohos:orientation="horizontal"
                ohos:bottom_margin="30vp"
                >
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:setting"
                    ohos:scale_mode="stretch"
                    ohos:right_margin="5vp"
                    ohos:left_margin="10vp"
                    ohos:layout_alignment="center"
                    />
                <Text
                    ohos:height="50vp"
                    ohos:width="330vp"
                    ohos:text="设置"
                    ohos:text_size="20fp"
                    ohos:text_color="#000000"
                    />
                <Image
                    ohos:height="30vp"
                    ohos:width="30vp"
                    ohos:image_src="$media:rightarrow"
                    ohos:scale_mode="stretch"
                    ohos:layout_alignment="center"
                    />
            </DirectionalLayout>

        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>