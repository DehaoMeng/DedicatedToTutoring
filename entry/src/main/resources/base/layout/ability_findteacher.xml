<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_ability"
    ohos:alignment="bottom"
    >
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="#A2CD5A"
        >
        <Text
            ohos:height="60vp"
            ohos:width="match_parent"
            ohos:text="查找教师"
            ohos:text_size="30fp"
            ohos:text_color="#FFFFFF"
            ohos:text_alignment="center"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="70vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="$graphic:background_ability_user"
        ohos:bottom_margin="5vp"
        >
        <DirectionalLayout
            ohos:id="$+id:gradeLayout"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:orientation="horizontal"
            ohos:layout_alignment="center"
            ohos:right_padding="20vp"
            >
            <Text
                ohos:id="$+id:grade"
                ohos:height="300vp"
                ohos:width="0"
                ohos:text="年级"
                ohos:left_padding="70vp"
                ohos:text_size="20fp"
                ohos:text_color="#FF0000"
                ohos:layout_alignment="center"
                ohos:weight="9"
                />
            <Image
                ohos:top_padding="30vp"
                ohos:height="40vp"
                ohos:width="0"
                ohos:weight="1"
                ohos:image_src="$media:bellowpull"
                ohos:scale_mode="stretch"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:subjectLayout"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:orientation="horizontal"
            ohos:layout_alignment="center"
            ohos:right_padding="20vp"
            >
            <Text
                ohos:id="$+id:subject"
                ohos:height="300vp"
                ohos:width="0"
                ohos:text="学科"
                ohos:left_padding="60vp"
                ohos:text_size="20fp"
                ohos:text_color="#FF0000"
                ohos:layout_alignment="center"
                ohos:weight="9"
                />
            <Image
                ohos:top_padding="30vp"
                ohos:height="40vp"
                ohos:width="0"
                ohos:weight="1"
                ohos:image_src="$media:bellowpull"
                ohos:scale_mode="stretch"
                />
        </DirectionalLayout>
    </DirectionalLayout>
    <ListContainer
        ohos:id="$+id:teachercontainer"
        ohos:height="450vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability"
        >
    </ListContainer>

</DirectionalLayout>