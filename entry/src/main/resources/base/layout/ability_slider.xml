<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="bottom"
    ohos:background_element="$graphic:background_ability"
    ohos:orientation="vertical"
    >

    <PageSlider
        ohos:id="$+id:page_slider"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="#FFFFFF"
        />
    <DirectionalLayout
        ohos:top_margin="1vp"
        ohos:left_margin="2vp"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:background_element="#FFFFFF"
        ohos:orientation="horizontal"
        >
        <DirectionalLayout
            ohos:id="$+id:frontpage"
            ohos:height="match_parent"
            ohos:width="0"
            ohos:weight="1"
            ohos:orientation="vertical"
            ohos:layout_alignment="center"
            ohos:left_padding="30vp"
            >
            <Image
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:image_src="$media:frontpage"
                ohos:scale_mode="inside"
                />
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="首页"
                ohos:text_size="12vp"
                ohos:text_color="#A0A0A0"
                ohos:layout_alignment="center"
                ohos:left_padding="5vp"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:findteacher"
            ohos:height="match_parent"
            ohos:width="0"
            ohos:weight="1"
            ohos:orientation="vertical"
            ohos:layout_alignment="center"
            ohos:left_padding="30vp"
            >
            <Image
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:image_src="$media:find2"
                ohos:scale_mode="inside"
                />
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="找老师"
                ohos:text_size="12vp"
                ohos:text_color="#A0A0A0"
                ohos:layout_alignment="center"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:MessagePage"
            ohos:height="match_parent"
            ohos:width="0"
            ohos:weight="1"
            ohos:orientation="vertical"
            ohos:layout_alignment="center"
            ohos:left_padding="30vp"
            >
            <Image
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:image_src="$media:message"
                ohos:scale_mode="inside"
                />
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:left_padding="5vp"
                ohos:text="消息"
                ohos:text_size="12vp"
                ohos:text_color="#A0A0A0"
                ohos:layout_alignment="center"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:me"
            ohos:height="match_parent"
            ohos:width="0"
            ohos:weight="1"
            ohos:orientation="vertical"
            ohos:layout_alignment="center"
            ohos:left_padding="30vp"
            >
            <Image
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:image_src="$media:me"
                ohos:scale_mode="inside"
                />
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="我的"
                ohos:text_size="12vp"
                ohos:text_color="#A0A0A0"
                ohos:layout_alignment="center"
                ohos:left_padding="5vp"
                />
        </DirectionalLayout>
    </DirectionalLayout>

</DirectionalLayout>