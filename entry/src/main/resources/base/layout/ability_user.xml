<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_ability"
    ohos:alignment="bottom"
    >
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#FF8C00"
        ohos:orientation="horizontal"
        >
        <Text
            ohos:id="$+id:locate"
            ohos:left_padding="15vp"
            ohos:height="50vp"
            ohos:width="90vp"
            ohos:text="地区"
            ohos:text_size="30vp"
            ohos:layout_alignment="center"
            />
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:left_margin="10vp"
            >
            <Image
                ohos:height="40vp"
                ohos:width="50vp"
                ohos:image_src="$media:find"
                ohos:scale_mode="inside"
                ohos:layout_alignment="center"
                ohos:background_element="#FFFFFF"
                />

            <Text
                ohos:height="40vp"
                ohos:width="230vp"
                ohos:layout_alignment="center"
                ohos:text="请输入搜索内容"
                ohos:text_color="#DCDCDC"
                ohos:text_size="20vp"
                ohos:background_element="#FFFFFF"
                />
        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:background_element="#FFFFFF"
        >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10vp"
            ohos:orientation="horizontal"
            >
            <DirectionalLayout
                ohos:id="$+id:chinese"
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="1"
                ohos:left_margin="10vp"
                ohos:top_margin="15vp"
                ohos:orientation="vertical"
                >
                <Image
                    ohos:height="60vp"
                    ohos:width="60vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:chinese"
                    />
                <Text
                    ohos:height="20vp"
                    ohos:width="60vp"
                    ohos:text="语文"
                    ohos:text_size="20vp"
                    ohos:text_color="#000000"
                    ohos:layout_alignment="left"
                    ohos:left_margin="10vp"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:math"
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="1"
                ohos:left_margin="20vp"
                ohos:top_margin="15vp"
                ohos:orientation="vertical"
                >
                <Image
                    ohos:height="60vp"
                    ohos:width="60vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:math"

                    />
                <Text
                    ohos:height="20vp"
                    ohos:width="60vp"
                    ohos:text="数学"
                    ohos:text_size="20vp"
                    ohos:text_color="#000000"
                    ohos:layout_alignment="left"
                    ohos:left_margin="10vp"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:english"
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="1"
                ohos:left_margin="20vp"
                ohos:top_margin="15vp"
                ohos:orientation="vertical"
                >
                <Image
                    ohos:height="60vp"
                    ohos:width="60vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:english"

                    />
                <Text
                    ohos:height="20vp"
                    ohos:width="60vp"
                    ohos:text="英语"
                    ohos:text_size="20vp"
                    ohos:text_color="#000000"
                    ohos:layout_alignment="left"
                    ohos:left_margin="10vp"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:physics"
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="1"
                ohos:left_margin="20vp"
                ohos:top_margin="15vp"
                ohos:orientation="vertical"
                >
                <Image
                    ohos:height="60vp"
                    ohos:width="60vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:physics"
                    />
                <Text
                    ohos:height="20vp"
                    ohos:width="60vp"
                    ohos:text="物理"
                    ohos:text_size="20vp"
                    ohos:text_color="#000000"
                    ohos:layout_alignment="left"
                    ohos:left_margin="10vp"
                    />
            </DirectionalLayout>

        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="20vp"
            ohos:orientation="horizontal"
            >
            <DirectionalLayout
                ohos:id="$+id:chemical"
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="1"
                ohos:left_margin="10vp"
                ohos:top_margin="15vp"
                ohos:orientation="vertical"
                >
                <Image
                    ohos:height="60vp"
                    ohos:width="60vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:chemical"
                    />
                <Text
                    ohos:height="20vp"
                    ohos:width="60vp"
                    ohos:text="化学"
                    ohos:text_size="20vp"
                    ohos:text_color="#000000"
                    ohos:layout_alignment="left"
                    ohos:left_margin="10vp"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:politics"
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="1"
                ohos:left_margin="20vp"
                ohos:top_margin="15vp"
                ohos:orientation="vertical"
                >
                <Image
                    ohos:height="60vp"
                    ohos:width="60vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:politics"

                    />
                <Text
                    ohos:height="20vp"
                    ohos:width="60vp"
                    ohos:text="政治"
                    ohos:text_size="20vp"
                    ohos:text_color="#000000"
                    ohos:layout_alignment="left"
                    ohos:left_margin="10vp"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:biology"
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="1"
                ohos:left_margin="20vp"
                ohos:top_margin="15vp"
                ohos:orientation="vertical"
                >
                <Image
                    ohos:height="60vp"
                    ohos:width="60vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:biology"

                    />
                <Text
                    ohos:height="20vp"
                    ohos:width="60vp"
                    ohos:text="生物"
                    ohos:text_size="20vp"
                    ohos:text_color="#000000"
                    ohos:layout_alignment="left"
                    ohos:left_margin="10vp"
                    />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:geography"
                ohos:height="match_content"
                ohos:width="0"
                ohos:weight="1"
                ohos:left_margin="20vp"
                ohos:top_margin="15vp"
                ohos:orientation="vertical"
                >
                <Image
                    ohos:height="60vp"
                    ohos:width="60vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:geography"

                    />
                <Text
                    ohos:height="20vp"
                    ohos:width="60vp"
                    ohos:text="地理"
                    ohos:text_size="20vp"
                    ohos:text_color="#000000"
                    ohos:layout_alignment="left"
                    ohos:left_margin="10vp"
                    />
            </DirectionalLayout>

        </DirectionalLayout>


    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="advertrsement"
        ohos:top_margin="10vp"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:background_element="#FFFFFF"
        ohos:orientation="horizontal"
        >
        <Image
            ohos:height="15vp"
            ohos:width="0"
            ohos:weight="1"
            ohos:image_src="$media:titlelog"
            ohos:scale_mode="inside"
            ohos:layout_alignment="center"
            />
        <Text
            ohos:height="match_parent"
            ohos:width="0"
            ohos:weight="8"
            ohos:text="名师一对一辅导啦"
            ohos:text_size="20vp"
            ohos:text_color="#B0B0B0"
            ohos:text_alignment="center"
            />
        <Image
            ohos:height="30vp"
            ohos:width="0"
            ohos:weight="1"
            ohos:layout_alignment="center"
            ohos:image_src="$media:rightarrow"
            ohos:scale_mode="inside"
            />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        >
        <DirectionalLayout
            ohos:top_margin="10vp"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:background_element="#FFFFFF"
            >
            <Image
                ohos:height="match_parent"
                ohos:width="0"
                ohos:weight="1"
                ohos:image_src="$media:smallspeakers"
                ohos:scale_mode="inside"
                />
            <Text
                ohos:height="match_parent"
                ohos:width="0"
                ohos:weight="5"
                ohos:text="热门名师"
                ohos:text_color="#B0B0B0"
                ohos:text_size="30vp"
                ohos:text_alignment="center"
                />
        </DirectionalLayout>
        <PageSlider
            ohos:id="$+id:advertrsement2"
            ohos:top_margin="5vp"
            ohos:height="200vp"
            ohos:width="match_parent"
            ohos:background_element="#FFFFFF"/>
    </DirectionalLayout>


</DirectionalLayout>